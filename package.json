{
    "name": "easy-waf",
    "version": "0.6.0",
    "description": "An easy-to-use Web Application Firewall (WAF) for Node.js",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "test": "jest --coverage --collectCoverageFrom=src/**/*.ts --forceExit",
        "test-server": "node test/test-server",
        "lint": "eslint .",
        "format": "prettier --write .",
        "build": "tsup",
        "dev": "nodemon src/index"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/timokoessler/easy-waf.git"
    },
    "keywords": [
        "waf",
        "proxy",
        "nodejs",
        "express",
        "security",
        "web-application-firewall",
        "ddos protection",
        "sql injection",
        "xss protection"
    ],
    "author": "priyanshu patel",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/timokoessler/easy-waf/issues"
    },
    "homepage": "https://github.com/timokoessler/easy-waf#readme",
    "engines": {
        "node": ">=16"
    },
    "devDependencies": {
        "@swc/core": "^1.3.67",
        "@swc/jest": "^0.2.26",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.17",
        "@types/express-validator": "^2.20.33",
        "@types/geoip-lite": "^1.4.4",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.4.1",
        "@types/proxy-addr": "^2.0.0",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.1.0",
        "@typescript-eslint/parser": "^8.1.0",
        "eslint": "^8.32.0",
        "express": "^4.18.1",
        "jest": "^29.5.0",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.0",
        "supertest": "^6.3.4",
        "ts-node-dev": "^2.0.0",
        "tsup": "^8.0.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.0.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "express-validator": "^7.2.1",
        "geoip-lite": "^1.4.8",
        "helmet": "^8.1.0",
        "http-proxy-middleware": "^2.0.6",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.14.1",
        "netparser": "^1.9.0",
        "nodemon": "^3.1.10",
        "proxy-addr": "^2.0.7"
    }
}
